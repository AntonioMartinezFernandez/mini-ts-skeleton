{
  "name": "mini-ts-skeleton",
  "version": "1.0.0",
  "description": "Minimal Express / Typescript API boilerplate for katas and small RESTful APIs",
  "main": "start.ts",
  "scripts": {
    "dev": "ts-node-dev --respawn src/start.ts",
    "build": "tsc",
    "start": "cross-env NODE_ENV=production node ./dist/start.js",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "jest --watchAll",
    "test:unit": "jest --config=jest.config.unit.ts",
    "test:integration": "jest --config=jest.config.integration.ts",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AntonioMartinezFernandez/mini-ts-skeleton.git"
  },
  "keywords": [
    "minimal",
    "express",
    "typescript",
    "api",
    "boilerplate"
  ],
  "author": "Antonio Mart√≠nez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/AntonioMartinezFernandez/mini-ts-skeleton/issues"
  },
  "homepage": "https://github.com/AntonioMartinezFernandez/mini-ts-skeleton#readme",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "envalid": "^7.3.1",
    "express": "^4.18.1",
    "fast-glob": "^3.2.11",
    "helmet": "^5.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.3.6",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^28.1.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "@types/node": "^17.0.42",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  }
}
